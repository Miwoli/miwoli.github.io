.gallery.section
  margin-top 0

.gallery-container
  display flex
  flex-wrap wrap
  justify-content space-around
  align-items center
  overflow hidden

.image-fig
  padding 20px
  max-width 300px

  img
    width 100%
    height auto
    padding-bottom 0
    margin-bottom 0
    cursor pointer
    box-shadow shadow
    user-select (none)
    transition: .3s all ease-in-out

  img:hover
    filter: drop-shadow(2px 2px 3px red)

  figcaption
    padding-top 0
    margin-top 0
    box-shadow shadow
    text-align center
    color white
    background color-4

.prev-container
  display none
  position fixed
  width 100vw
  height 100vh
  top 0
  z-index 1000
  background rgba(0,0,0,0.85)
  justify-content center
  cursor pointer

.prev-container.active
  display flex

  img
    height 100%
    width auto
