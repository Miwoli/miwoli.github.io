.creators-container
  display flex
  flex-direction column
  justify-content center
  align-items: center;

.creator
  width 70%
  padding 10px
  height 30%
  margin-bottom 10px
  background #00477F
  box-shadow shadow
  display flex
  justify-content: space-between
  align-items: center

  span
    color white

  img
    height: 32px
    width auto
    border-radius: 50%
    user-select(none)

.role
  flex 2

.name
  padding 0px 20px
  font-weight: 300

@media (max-width: 450px)
  .creator
    flex-direction: column-reverse;
    justify-content: center;
    text-align: center;
