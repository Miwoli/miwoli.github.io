monitor_color: lavender

.body
    min-width: 850px
    max-width: 1800px
    height: 100%
    background: #7d7e7d
    background: -moz-linear-gradient(-45deg, #7d7e7d 0%, #0e0e0e 100%)
    background: -webkit-linear-gradient(-45deg, #7d7e7d 0%,#0e0e0e 100%)
    background: linear-gradient(135deg, #7d7e7d 0%,#0e0e0e 100%)

.hardware
    display: flex
    margin-top: 2%
    margin-left: 2%
    height: 50%
    position: relative

    .monitor
        padding-top: 1%
        width: 67.5%
        height: 100%

        .display
            width: 100%
            height: 78.75%
            border: 1px solid black
            border-radius: 5px
            padding-top: 56.25%
            position: relative
            background-color: $monitor_color

            .screen
                position: absolute
                top: 0
                left: 0
                bottom: 0
                right: 0
                margin: 20px
                background: black

                .black_screen
                    z-index: 1000
                    display: none
                    width: 100%
                    height: 100%
                    position: absolute

                .black_screen.active
                    display: block
                    background: black

                .content
                    display: none
                    display: none
                    width: 100%
                    height: 100%
                    position: absolute
                    background: white

                .content.active
                    display: block

                    .left-nav
                        ul
                            height: 100%
                            width: 20%
                            display: flex
                            flex-direction: column

                            li
                                display: flex
                                flex-direction: column

                                a
                                    background: yellow
                                    border-bottom: 2px solid rgba(0,0,0,0.2)
                                    text-align: center
                                    padding: 5px 20px

            .switch
                position: absolute
                right: 20px
                bottom: 0
                background: aqua
                width: 5%
                height: 10px

            .switch.active
                background: darkblue

        .stand
            height: 21.25%
            width: 27.7%
            display: flex
            flex-direction: column
            align-items: center
            margin: auto

            .stand_1
                background-color: $monitor_color
                height: 88.235%
                width: 23.3%
                border: 1px solid black
                border-top: none
                border-bottom: none
                padding-top: 50%

            .stand_2
                background-color: $monitor_color
                height: 11.765%
                width: 100%
                border: 1px solid black
                border-bottom: none
                padding-top: 10%

    .desktop
        padding-left: 5%
        height: 100%
        width: 32.5%
        padding-top: 50.5%
        position: relative

        .case
            bottom: 0
            position: absolute
            border: 1px solid black
            width: 70%
            height: 78.75%
            background: $monitor-color

        .drive
            height: 4.76%
            width: 66.6%
            border: 1px solid black
            margin: auto
            margin-top: 15%
            background: gray

        .power
            height: 10%
            width: 10%
            border-radius: 50%
            padding: 25%
            margin: auto
            margin-top: 70%
            background: darkblue

        .power.active
            background: blue

        .reset
            height: 5%
            width: 5%
            border-radius: 50%
            padding: 10%
            margin-left: 70%
            background: red

.desk
    border-top: 1px solid black
