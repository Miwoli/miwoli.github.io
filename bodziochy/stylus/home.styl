//Style ogólne

body
  min-height 100vh
  background color-3
  margin-bottom 50px

.hidden
  display none

//Style strony głównej

.home.section
  p
    text-align center

.home-container
    margin 0 5px
    margin-bottom: 50px
    background color-2
    box-shadow shadow

    article, img
      color white
      text-align center
      padding 20px

    article
      h1
        font-size 2em
        font-weight: 300
        color lightgray

      h2
        font-size: 1.5em
        font-weight: 300;
        color lightgray

      p
        font-size: 1em
        font-weight: 300
        color white
        margin: 10px 0
