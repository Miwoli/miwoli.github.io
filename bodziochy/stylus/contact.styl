.contact
  .form-container
    display flex
    justify-content center

    form
      width 70%
      margin-bottom 100px
      background color-2
      box-shadow shadow
      padding 20px
      text-align: center;

      input, select
        padding: 5px
        border: none
        border-radius: 10px

      p
        margin 10px 0

      .radios, .checkboxes
        text-align: left;
        width: 40%
        margin: 10px auto

      .button
        background: color-4
        transition: .3s all ease-in-out
        padding: 5px 10px

        &:hover
          background: color-main
