roboto = 'Roboto', sans-serif
shadow = 2px 2px 3px #333
//COLORS
color-main = #FFB500
color-1 = rgb(255, 203, 76)
color-2 = rgba(127, 90, 0, 1)
color-3 = hsl(42, 54%, 32%)
color-4 = hsla(42, 100%, 40%, 1)

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

user-select(n)
  -webkit-user-select n  /* Chrome all / Safari all */
  -moz-user-select n     /* Firefox all */
  -ms-user-select n      /* IE 10+ */
  user-select n
